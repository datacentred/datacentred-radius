ldap {
  dictionary_mapping = ${confdir}/ldap.attrmap
  server = "<%= @server %>"
  basedn = "<%= @basedn %>"
  filter = "<%= @filter %>"
  port = "<%= @port %>"
<% if @use_ssl == true -%>
  tls {
    start_tls    = "<%= @start_tls %>"
    cacertfile   = "<%= @ssl_cacert %>"
    certfile     = "<%= @ssl_cert %>"
    keyfile      = "<%= @ssl_key %>"
    require_cert = "<%= @require_cert %>"
  }
<% end -%>

}
